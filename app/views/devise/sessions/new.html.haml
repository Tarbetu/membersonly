%h2.title.has-text-centered.m-2 Log in
.block.m-5
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .field
      = f.label :email, class: "label"
      .control= f.email_field :email, autofocus: true, autocomplete: "email", class: "input"
    .field
      = f.label :password, class: "label"
      .control= f.password_field :password, autocomplete: "current-password", class: "input"
    - if devise_mapping.rememberable?
      .control
        = f.check_box :remember_me, class: "checkbox"
        = f.label :remember_me, class: "checkbox"
    .actions
      .control= f.submit "Log in", class: "button"
  = render "devise/shared/links"
